    "import numpy as np\n",
    "\n",
    "# The R matrix contains all the splits\n",
    "# columns are classes, rows are branches\n",
    "\n",
    "R = np.array([\n",
    "    [223, 251, 197],\n",
    "    [263-223, 359-251, 358-197]\n",
    "])\n",
    "\n",
    "accuracy = (R.max(axis=1).sum())/R.sum()\n",
    "print(\"accuracy:\", accuracy)"
   ]
  }
